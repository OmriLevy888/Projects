ChatScreen:

<ChatScreen>:
    grid: grid_id

    GridLayout:
        cols: 1
        rows: 2
        id: grid_id
        display: entry

        GridLayout:
            cols: 2
            rows: 1
            size_hint_y: .925

            GridLayout:
                cols: 1
                rows: 2
                size_hint_x: .25

                GridLayout:
                    cols: 2
                    rows: 1
                    size_hint_y: .15
                    spacing: 0

                    Button:
                        size_hint_x: .2
                        text: 'QUIT'
                        background_color: .35, .35, .35, 1
                        on_press: root.quit()

                    BoxLayout:
                        size_hint_x: .8

                        canvas.before:
                            Color:
                                rgba: .6, .6, .6, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size

                        Label:
                            text: 'ONLINE'

                Label:
                    size_hint_y: .85
                    text: 'user-1'

            ScrollView:
                size_hint_x: .75

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    id: entry
                    text: ''
                    markup: True
                    color: 0, 0, 0, 1
                    font_size: 15
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    on_size: root.set_display(self)

        TextInput:
            size_hint_y: .075
            multiline: False
            background_normal: 'deps/images/text_input.png'
            on_text_validate: root.submit_text(self, self.text)